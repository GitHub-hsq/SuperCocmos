{
    "version": "1.0",
    "description": "Skill activation triggers for Claude Code. Controls when skills automatically suggest or block actions.",
    "skills": {
        "skill-developer": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Meta-skill for creating and managing Claude Code skills",
            "promptTriggers": {
                "keywords": [
                    "skill system",
                    "create skill",
                    "add skill",
                    "skill triggers",
                    "skill rules",
                    "hook system",
                    "skill development",
                    "skill-rules.json",
                    "创建技能",
                    "技能系统",
                    "添加技能",
                    "技能触发"
                ],
                "intentPatterns": [
                    "(how do|how does|explain).*?skill",
                    "(create|add|modify|build).*?skill",
                    "skill.*?(work|trigger|activate|system)",
                    "如何.*?技能",
                    "创建.*?技能"
                ]
            }
        },
        "express-ts-guidelines": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Express + TypeScript + Supabase + Langchain 后端开发规范",
            "promptTriggers": {
                "keywords": [
                    "controller",
                    "express",
                    "api",
                    "supabase",
                    "langchain",
                    "workflow",
                    "数据库",
                    "后端",
                    "接口",
                    "工作流",
                    "认证",
                    "中间件"
                ],
                "intentPatterns": [
                    "(create|add|implement).*?(api|endpoint|route|controller)",
                    "(supabase|database).*?(query|operation|service)",
                    "(langchain|workflow|langgraph).*?(create|implement|build)",
                    "(auth|authentication|authorization).*?(implement|add)",
                    "创建.*?(接口|API|端点|控制器)",
                    "数据库.*?(查询|操作)",
                    "(工作流|AI).*?(创建|实现)"
                ],
                "pathPatterns": [
                    "service/src/api/**/*.ts",
                    "service/src/db/**/*.ts",
                    "service/src/middleware/**/*.ts",
                    "service/src/quiz/**/*.ts",
                    "service/src/novel/**/*.ts"
                ],
                "contentPatterns": [
                    "express\\.Router\\(",
                    "app\\.(get|post|put|delete|patch)",
                    "export (async )?function handle",
                    "supabase\\.from\\(",
                    "new StateGraph",
                    "ChatOpenAI",
                    "requireAuth"
                ]
            }
        },
        "route-tester": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "medium",
            "description": "Auth0 JWT 认证 API 路由测试指南",
            "promptTriggers": {
                "keywords": [
                    "test api",
                    "test route",
                    "test endpoint",
                    "curl",
                    "postman",
                    "jwt token",
                    "access token",
                    "auth0 token",
                    "bearer token",
                    "测试接口",
                    "测试API",
                    "测试路由",
                    "获取token",
                    "认证测试"
                ],
                "intentPatterns": [
                    "(test|debug|check).*?(api|route|endpoint)",
                    "(how to|how do).*?(test|call).*?(api|endpoint)",
                    "(get|obtain|retrieve).*?(token|access token|jwt)",
                    "(curl|postman|http).*?(request|test)",
                    "401|403.*?(error|unauthorized|forbidden)",
                    "测试.*?(接口|API|路由)",
                    "如何.*?(测试|调用).*?(接口|API)",
                    "获取.*?(token|令牌|访问令牌)"
                ]
            }
        }
    },
    "notes": {
        "enforcement_types": {
            "suggest": "Skill suggestion appears but doesn't block execution",
            "block": "Requires skill to be used before proceeding (guardrail)",
            "warn": "Shows warning but allows proceeding"
        },
        "priority_levels": {
            "critical": "Highest - Always trigger when matched",
            "high": "Important - Trigger for most matches",
            "medium": "Moderate - Trigger for clear matches",
            "low": "Optional - Trigger only for explicit matches"
        },
        "customization": {
            "pathPatterns": "Adjust to match your project structure",
            "keywords": "Add domain-specific terms relevant to your project",
            "intentPatterns": "Use regex for flexible user intent matching"
        }
    }
}