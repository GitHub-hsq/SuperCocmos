{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "naive-ui/volar"]
  },
  "include": ["src/**/*", "src/typings/**/*"],
  "exclude": ["node_modules", "dist", "service"]
}
